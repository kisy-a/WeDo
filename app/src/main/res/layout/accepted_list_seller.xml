<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/taskAccept_serImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:paddingStart="5dp"
            android:layout_marginLeft="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskAccept_serTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/rubik_bold"
                android:text="@string/BuyerOrderList_serTitle"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/taskAccept_serCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:lineSpacingExtra="3dp"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/rubik_regular"
                android:textSize="11dp"
                android:text="@string/BuyerOrderList_serCategory" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/duration_large" />


                <TextView
                    android:id="@+id/taskAccept_serDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:fontFamily="@font/rubik_regular"
                    android:textSize="10dp"
                    android:text="@string/BuyerOrderList_serDeliveryTitle" />

               <!-- <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:text="@string/BuyerOrderList_serDeliveryTitle" />-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/SellerTaskList_clientTitle"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/taskAccept_serClientName"
                    android:layout_width="211dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:paddingEnd="18dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/SellerTaskList_clientName"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="10dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/SellerTaskList_serStatusTitle"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/taskAccept_serStatus"
                    android:layout_width="72dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/SellerTaskList_serStatus2"
                    android:textAlignment="textStart"
                    android:textColor="@color/red"
                    android:layout_marginLeft="2dp"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/taskAccept_serPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/SellerTaskList_serPriceItem"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_blue2"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/light_grey2"
            android:backgroundTintMode="src_atop"/>


    </LinearLayout>


</RelativeLayout>