<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp">

    <androidx.cardview.widget.CardView

        android:layout_width="160dp"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/MainCat_SerImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:paddingTop="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/video_image" />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/MainCat_Desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="1"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/Seller_ServicePost_SubCategoryTitle"
                android:textColor="@color/black"
                android:textSize="8dp" />


            <TextView
                android:id="@+id/MainCat_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_bold"
                android:lineSpacingExtra="2dp"
                android:text="@string/Seller_ServicePost_CategoryTitle"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:fontFamily="@font/lalezar" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>