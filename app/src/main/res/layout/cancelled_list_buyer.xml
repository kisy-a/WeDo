<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/rubik_regular">

    <ImageView
        android:id="@+id/orderCancel_serImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="9dp"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/orderCancel_serTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:paddingEnd="15dp"
                android:fontFamily="@font/rubik_bold"
                android:text="@string/BuyerOrderList_serTitle"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderCancel_serCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:lineSpacingExtra="3dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/BuyerOrderList_serCategory"
                android:textSize="11dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="13dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_person" />

                <TextView
                    android:id="@+id/orderCancel_serSellerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:paddingEnd="18dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/BuyerOrderList_clientName"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/duration_large" />


                <TextView
                    android:id="@+id/orderCancel_serDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4.1dp"
                    android:fontFamily="@font/rubik_regular"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:text="@string/BuyerOrderList_serDeliveryTitle" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/BuyerOrderList_serStatusTitle"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/orderCancel_serStatus"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/BuyerOrderList_serStatus5"
                    android:textAlignment="textStart"
                    android:textColor="#cf142b"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/orderCancel_serPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/BuyerOrderList_serPriceItem"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_blue2"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/light_grey2"
            android:backgroundTintMode="src_atop" />


    </LinearLayout>

</RelativeLayout>