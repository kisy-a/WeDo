<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/taskPending_serImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:paddingStart="5dp"
            android:layout_marginLeft="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskPending_serTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:layout_marginLeft="12dp"
                android:text="@string/BuyerOrderList_serTitle"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taskPending_serCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:lineSpacingExtra="3dp"
                android:layout_alignParentTop="true"
                android:textSize="11dp"
                android:text="@string/BuyerOrderList_serCategory" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="92dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:src="@drawable/duration_large" />


                <TextView
                    android:id="@+id/taskPending_serDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:layout_marginTop="1dp"
                    android:text="@string/BuyerOrderList_serDeliveryTitle" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="@string/SellerTaskList_clientTitle"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/taskPending_serClientName"
                    android:layout_width="211dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="4dp"
                    android:paddingEnd="18dp"
                    android:text="@string/SellerTaskList_clientName"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="10dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/SellerTaskList_serStatusTitle"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/taskPending_serStatus"
                    android:layout_width="72dp"
                    android:layout_height="20dp"
                    android:text="@string/SellerTaskList_serStatus"
                    android:textAlignment="textStart"
                    android:textColor="#cf142b"
                    android:textSize="12dp"
                    android:layout_marginLeft="2dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/taskPending_serPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="@string/SellerTaskList_serPriceItem"
                    android:textAlignment="textEnd"
                    android:textColor="@color/dark_blue2"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

                <Button
                    android:id="@+id/btn_viewPayment"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#7E80EC"
                    android:textSize="12dp"
                    android:stateListAnimator="@null"
                    android:text="@string/SellerTaskList_btn_viewPayment"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.05"/>

                <Button
                    android:id="@+id/btn_accepted"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:text="@string/SellerTaskList_btn_accepted"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:stateListAnimator="@null"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#7E80EC" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/light_grey2"
            android:backgroundTintMode="src_atop"/>


    </LinearLayout>


</RelativeLayout>