<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/manageSer_Image"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="9dp"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/manageSer_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/black2"
                android:text="@string/ManageService_serCategory"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/manageSer_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ManageService_serTitle"
                android:textColor="@color/black"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/manageSer_price"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:text="@string/ManageService_serPriceItem"
                android:textAlignment="textStart"
                android:textColor="#cf142b"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <Button
                    android:id="@+id/btn_portfolio"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:text="@string/ManageService_btn_Portfolio"
                    android:stateListAnimator="@null"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"
                    android:textSize="12dp"
                    android:backgroundTint="#7E80EC"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.20"/>

                <Button
                    android:id="@+id/btn_editSer"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:textSize="12dp"
                    android:text="@string/btn_edit"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#7E80EC"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.20"/>

                <Button
                    android:id="@+id/btn_viewReview"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="50dp"
                    android:textSize="12dp"
                    android:text="@string/ManageService_btn_viewReview"
                    android:textStyle="bold"
                    android:stateListAnimator="@null"
                    android:textColor="@color/white"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#7E80EC"/>

            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/light_grey2" />


    </LinearLayout>

</RelativeLayout>